\RequirePackage{ifxetex,ifluatex,xkeyval,textcomp}

\newif\ifnoto@ttf 
\ifxetex
  \noto@ttftrue
\else\ifluatex
  \noto@ttftrue
\else  % [pdf]LaTeX
  \noto@ttffalse
\fi\fi

\newif\ifnoto@sfdefault \noto@sfdefaultfalse
\newif\ifnoto@sf \noto@sftrue
